{
  "name": "my-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/modules/*"
    ],
    "nohoist": [
      "**/tailwindcss",
      "**/postcss",
      "**/autoprefixer"
    ]
  },
  "scripts": {
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "turbo": "^1.12.0",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.19"
  }
}
